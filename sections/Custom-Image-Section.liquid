<style>
  body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
  }
 .img-section{
      background:{{ section.settings.img-section-background_color }};
      padding-top:{{ section.settings.img-section_padding_top }}px;
      padding-bottom:{{ section.settings.img-section_padding_bottom }}px;
      padding-right:{{ section.settings.img-section_padding_right }}px;
      padding-left:{{ section.settings.img-section_padding_left }}px;
  }
  .img-section .heading{
      padding-top: {{ section.settings.heading_padding_top }}px;
      padding-bottom: {{ section.settings.heading_padding_bottom }}px;
      color:{{ section.settings.heading_color }};
      text-align: center;
      font-size:  {{ section.settings.heading_font_size }}px;
  }
  .image-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      grid-gap: 10px;
      padding-top: {{ section.settings.img-box_padding_top }}px;
      padding-bottom: {{ section.settings.img-box_padding_bottom }}px;
      padding-right:{{ section.settings.img-box_padding_right }}px;
      padding-left:{{ section.settings.img-box_padding_left }}px;
      border: 1px solid #ccc;
      max-width: auto;
      margin: 0 auto;
  }
  .image {
      border: 1px solid #ccc;
      padding-top: {{ section.settings.img_padding_top }}px;
      padding-bottom: {{ section.settings.img_padding_bottom }}px;
      padding-right:{{ section.settings.img_padding_right }}px;
      padding-left:{{ section.settings.img_padding_left }}px;
      text-align: center;
  }
  .image img {
      max-width: 100%;
      height: auto;
  }
</style>
<div class="img-section">
<h1 class="heading">{{ section.settings.img_heading }}</h1>
<div class="image-grid image-box">
 {% for block in section.blocks %}
  <a href="{{ block.settings.img-link_url }}" class="image">
    <img src="{{ block.settings.section-image | img_url: 'master' }}" alt="Image 1">
  </a>
 {% endfor %}
</div>
</div>

