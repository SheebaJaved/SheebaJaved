 <style>
        body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        }
       .nx-video-container {
        background: {{ section.settings.nx_video_section_background_color }};
        padding-top: {{ section.settings.nx_video_section_padding_top }}px;
        padding-bottom: {{ section.settings.nx_video_section_padding_bottom }}px;
        padding-right: {{ section.settings.nx_video_section_padding_right }}px;
        padding-left: {{ section.settings.nx_video_section_padding_left }}px;
       }
        .nx-video-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 20px;
        }
        .nx-video-container .nx-video-heading{
        padding-top: {{ section.settings.nx_video_heading_padding_top }}px;
        padding-bottom: {{ section.settings.nx_video_heading_padding_bottom }}px;
        color:{{ section.settings.nx_video_heading_color }};
        font-weight: {{ section.settings.nx_video_heading_font_weight }};
        text-align: center;
        font-size:  {{ section.settings.nx_video_heading_font_size }}px;
        }

        .nx-video {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio (height / width) for responsive videos*/ */
        }     
        .nx-video iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        }
     </style>
  <div class="nx-video-container">
   <h1 class="nx-video-heading">{{ section.settings.nx_video_heading }}</h1>
   <div class="nx-video-section">
     {% for block in section.blocks %}
    <div class="nx-video">
      <iframe src="{{ block.settings.nx_video-link_url }}" frameborder="0" allowfullscreen autoplay></iframe>
    </div>
  {% endfor %}
    
    </div>
  </div>
    {% schema %}
  {
    "name": "Custom Video Section",
    "settings": [
       {
    "type": "color",
    "id": "nx_video_section_background_color",
    "label": "Background Color",
    "default": "#fff"
    },
    {
    "type": "range",
    "id": "nx_video_section_padding_top",
    "label": "Section Padding Top",
    "unit": "px",
    "min": 0,
    "max": 100,
    "default": 10,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_section_padding_bottom",
    "label": "Section Padding Bottom",
    "unit": "px",
    "min": 0,
    "max": 100,
    "default": 10,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_section_padding_right",
    "label": "Section Padding Right",
    "unit": "px",
    "min": 0,
    "max": 100,
    "default": 10,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_section_padding_left",
    "label": "Section Padding Left",
    "unit": "px",
    "min": 0,
    "max": 100,
    "default": 10,
    "step": 1
    },
    {
    "type": "text",
    "id": "nx_video_heading",
    "label": "Heading",
    "default": "Video Section"
    },
    {
    "type": "color",
    "id": "nx_video_heading_color",
    "label": "Heading Color",
    "default": "#000"
    },
    {
    "type": "range",
    "id": "nx_video_heading_padding_top",
    "label": "Padding Top",
    "unit": "px",
    "min": 0,
    "max": 50,
    "default": 5,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_heading_padding_bottom",
    "label": "Padding Bottom",
    "unit": "px",
    "min": 0,
    "max": 50,
    "default": 10,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_heading_font_size",
    "label": "Font Size",
    "unit":"px",
    "min": 20,
    "max": 60,
    "default": 30,
    "step": 1
    },
    {
    "type": "range",
    "id": "nx_video_heading_font_weight",
    "label": "Text Font Weight",
    "unit": "nrm",
    "min": 100,
    "max": 900,
    "default": 600,
    "step": 100
    }
    ],
    "blocks": [
    {
    "type": "Video-box",
    "name": "Video Box",
    "limit": 12,
    "settings": [
    {
      "type": "text",
      "id": "nx_video-link_url",
      "label": "Video Link URL",
      "default": "https://www.youtube.com/embed/a9abIaFWm4w"
    } 
    ]
    }
  ],
  "presets": [
    {
      "name": "Custom Video Section",
      "category": "Custom"
    }
  ]
 }
{% endschema %}