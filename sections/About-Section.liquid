<style>
    .about-row {
      display: grid;
      grid-template-columns: 1fr;
      grid-gap: 20px;
      align-items: center;
      background: {{ section.settings.about_section-background_color }};
      padding-top: {{ section.settings.about_section_padding_top }}px;
      padding-bottom: {{ section.settings.about_section_padding_bottom }}px;
      padding-right: {{ section.settings.about_section_padding_right }}px;
      padding-left: {{ section.settings.about_section_padding_left }}px;
    }
    .about-row .col-2 img {
      max-width: 100%;
      padding: 20px 0;
    }
    .about-row .col-2 h1 {
      padding-top: {{ section.settings.about_heading_padding_top }}px;
      padding-bottom: {{ section.settings.about_heading_padding_bottom }}px;
      padding-right: {{ section.settings.about_heading_padding_right }}px;
      padding-left: {{ section.settings.about_heading_padding_left }}px;
      color: {{ section.settings.about_heading_color }};
      font-size:  {{ section.settings.heading_font_size }}px;
      line-height: 50px;
      margin-top: {{ section.settings.about_heading_margin_top }}px;
      margin-bottom: {{ section.settings.about_heading_margin_bottom }}px;
      margin-right: {{ section.settings.about_heading_margin_right }}px;
      margin-left: {{ section.settings.about_heading_margin_left }}px;
    }
     .about-row .col-2 p {
      padding-top: {{ section.settings.about_text_padding_top }}px;
      padding-bottom: {{ section.settings.about_text_padding_bottom }}px;
      padding-right: {{ section.settings.about_text_padding_right }}px;
      padding-left: {{ section.settings.about_text_padding_left }}px;
      color:{{ section.settings.about_text_color }};
      font-size:  {{ section.settings.about_text_font_size }}px;
    }
    .about-row .btn {
      display: inline-block;
      color: {{ section.settings.about_button_color }};
      background: {{ section.settings.about_button_background_color }};
      padding-top: {{ section.settings.about_button_padding_top }}px;
      padding-bottom: {{ section.settings.about_button_padding_bottom }}px;
      padding-right: {{ section.settings.about_button_padding_right }}px;
      padding-left: {{ section.settings.about_button_padding_left }}px;
      margin-top: {{ section.settings.about_button_margin_top }}px;
      margin-bottom: {{ section.settings.about_button_margin_bottom }}px;
      margin-right: {{ section.settings.about_button_margin_right }}px;
      margin-left: {{ section.settings.about_button_margin_left }}px;
      text-decoration: none;
      border-radius: 30px;
      transition: background 0.5s;
    }
    .about-row .btn:hover {
       color: {{ section.settings.about_button_hover_color }};
      background: {{ section.settings.about_button_hover_background_color }};
    }

    /* Responsive layout for screens larger than 768px */
    @media (min-width: 768px) {
      .about-row{
        grid-template-columns: 1fr 1fr;
      }
    }
  </style>

  <div class="about-row">
    <div class="col-2">
      <h1>{{ section.settings.about_heading }}</h1>
      <p>{{ section.settings.about_text }}</p>
      <a href="{{ section.settings.about_button_link_url }}" class="btn">{{ section.settings.About_button }} &#10140;</a>
    </div>
    <div class="col-2">
    <a href="{{ section.settings.about_link_url }}">
      <img src="{{ section.settings.about_img | img_url: 'master' }}" alt="Image">
    </a>
    </div>
  </div>

