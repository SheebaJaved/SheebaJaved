<style>
  .nx-announcement {
    background-color: {{ section.settings.nx_nav_bar_background_color }};
    color: {{ section.settings.nx_nav_bar_text_color }};
    font-size: {{ section.settings.nx_nav_bar_text_font_size }}px;
    font-weight: {{ section.settings.nx_nav_bar_text_font_weight }};
    font-family: Rubik,sans-serif;
    padding-top: {{ section.settings.nx_nav_bar_text_padding_top }}px;
    padding-bottom: {{ section.settings.nx_nav_bar_text_padding_bottom }}px;
  }
</style> 


{%- for block in section.blocks -%}
  {%- case block.type -%}
 
    {%- when 'announcement' -%}
      <div id="announcement" class="nx-announcement-bar nx-announcement" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="nx-announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <p class="nx-announcement-bar__message h5 nx-announcement">
                {{ block.settings.text | escape }}
                {%- if block.settings.link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </p>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}





{% schema %}
{
  "name": "NX Announcement Bar",
  "settings": [
    {
  "type": "color",
  "id": "nx_nav_bar_background_color",
  "label": "Background Color",
  "default": "#fff"
  },
  {
  "type": "color",
  "id": "nx_nav_bar_text_color",
  "label": "Text Color",
  "default": "#000"
  },
  {
  "type": "range",
  "id": "nx_nav_bar_text_font_size",
  "label": "Text Font Size",
  "unit":"px",
  "min": 0,
  "max": 60,
  "default": 12,
  "step": 1
  },
  {
  "type": "range",
  "id": "nx_nav_bar_text_font_weight",
  "label": "Text Font Weight",
  "unit": "nrm",
  "min": 100,
  "max": 900,
  "default": 600,
  "step": 100
  },
  {
  "type": "range",
  "id": "nx_nav_bar_text_padding_top",
  "label": "Text Padding Top",
  "unit": "px",
  "min": 0,
  "max": 40,
  "default": 7,
  "step": 1
  },
  {
  "type": "range",
  "id": "nx_nav_bar_text_padding_bottom",
  "label": "Text Padding Bottom",
  "unit": "px",
  "min": 0,
  "max": 40,
  "default": 7,
  "step": 1
  }  
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.nx-announcement-bar.blocks.nx-announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.nx-announcement-bar.blocks.nx-announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.nx-announcement-bar.blocks.nx-announcement.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NX Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}

{% endschema %}